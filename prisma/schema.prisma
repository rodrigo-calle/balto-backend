datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Goal {
  id          String   @id @default(uuid())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  weeks       Week[]
  User        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Week {
  id               String             @id @default(uuid())
  goalId           String
  weekNumber       Int
  description      String
  startDate        DateTime
  endDate          DateTime
  WeeklyObjectives WeeklyObjectives[]
  DailyEntry       DailyEntry[]
  Goal             Goal               @relation(fields: [goalId], references: [id])
  User             User?              @relation(fields: [userId], references: [id])
  userId           String?
}

model DailyEntry {
  id                   String                 @id @default(uuid())
  weekId               String
  date                 DateTime
  progress             String
  notes                String
  Week                 Week                   @relation(fields: [weekId], references: [id])
  DailyEntryObjectives DailyEntryObjectives[]
  User                 User?                  @relation(fields: [userId], references: [id])
  userId               String?
}

model WeeklyObjectives {
  id        String @id @default(uuid())
  weekId    String
  objective String
  Week      Week   @relation(fields: [weekId], references: [id])
}

model DailyEntryObjectives {
  id           String     @id @default(uuid())
  dailyEntryId String
  objective    String
  description  String
  isCompleted  Boolean
  DailyEntry   DailyEntry @relation(fields: [dailyEntryId], references: [id])
}

model User {
  id           String       @id @default(uuid())
  name         String
  email        String       @unique
  password     String
  goals        Goal[]
  weeks        Week[]
  dailyEntries DailyEntry[]
}
